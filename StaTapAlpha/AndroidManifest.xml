<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.statapalpha"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.statapalpha.CourtActivity"
            android:label="@string/title_activity_court_activity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.statapalpha.HomeScreen"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.statapalpha.NewGameActivity"
            android:label="@string/title_activity_new_game"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.statapalpha.CreateTeam"
            android:label="@string/title_activity_create_team"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.statapalpha.StatActivity"
            android:label="@string/title_activity_stat"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.statapalpha.EditTeam"
            android:label="@string/title_activity_edit_team"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.statapalpha.CurrentStats"
            android:label="@string/title_activity_current_stats" >
        </activity>
    </application>

</manifest>
