<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.statap_playerhalftime.MainActivity" >

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Back"
        android:onClick="back" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnBack"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtPO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P = Points"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtFT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FT = Freethrows"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BL = Blocks"
            android:textSize="20sp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/txtA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A = Assists"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RB = Rebounds"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S = Steals"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T = Turnovers"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="F = Fouls"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layoutT1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layoutT11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/textT1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/zero"
                    android:textColor="#3399FF"
                    android:textSize="35sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutContainer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp" >

                <TextView
                    android:id="@+id/txtPlayer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/num"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="@string/statP"
                    android:textColor="#17B2FF"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtTwoPt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="@string/statFG"
                    android:textColor="#FF8E00"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtThreePt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="@string/statTP"
                    android:textColor="#00FF6A"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtFreeThrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="@string/statFT"
                    android:textColor="#00E658"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/textViewBl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="@string/statBL"
                    android:textColor="#00FBFF"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtAssists"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="@string/statA"
                    android:textColor="#0089FA"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtRebounds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="@string/statR"
                    android:textColor="#0026FF"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtSteals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="@string/statS"
                    android:textColor="#5D00FF"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtTurnovers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="@string/statT"
                    android:textColor="#EA00FF"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtFouls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="@string/statF"
                    android:textColor="#FF0084"
                    android:textSize="25sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/listView1"
                android:layout_width="1000dp"
                android:layout_height="220dp" >
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutT2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layoutT22"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/away"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/textT2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/zero"
                    android:textColor="#3399FF"
                    android:textSize="35sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutContainer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/num"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/TextView08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="@string/statP"
                    android:textColor="#17B2FF"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/TextView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="@string/statFG"
                    android:textColor="#FF8E00"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/TextView09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="@string/statTP"
                    android:textColor="#00FF6A"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/TextView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:text="@string/statFT"
                    android:textColor="#00E658"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/TextView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="@string/statBL"
                    android:textColor="#00FBFF"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvStuff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="@string/statA"
                    android:textColor="#0089FA"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/TextView06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="@string/statR"
                    android:textColor="#0026FF"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="@string/statS"
                    android:textColor="#5D00FF"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="@string/statT"
                    android:textColor="#EA00FF"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/TextView07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:text="@string/statF"
                    android:textColor="#FF0084"
                    android:textSize="25sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/ListView01"
                android:layout_width="1000dp"
                android:layout_height="220dp" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>